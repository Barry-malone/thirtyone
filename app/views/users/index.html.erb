<div class="row">
  <div class="small-12 medium-9 large-8 columns small-centered">
    <h3>Users</h3>

<table style="width:100%">
    <% @users.each do |user| %>
      <tr onclick="window.location='<%= user_path(user) %>';">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
</table>
<%= link_to 'New User', new_user_path, :class => 'button tiny' %>