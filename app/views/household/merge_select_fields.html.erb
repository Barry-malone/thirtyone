<div class="row space-bottom">
  <div class="small-12 columns">
    <h1>Merge Households</h1>
    <span>Select the information from the household you would like to preserve.</span>
  </div>
</div>
  <form>

    <div class="row space-bottom">
      <div class="small-6 columns">
        <%= render 'merge_household_name', household: @household %>
      </div>
      <div class="small-6 columns">
        <%= render 'merge_household_name', household: @merge_household %>
      </div>
    </div>
    <div class="row space-bottom">
      <div class="small-6 columns">
        <%= render 'merge_household_address', household: @household, default: true %>
      </div>
      <div class="small-6 columns">
        <%= render 'merge_household_address', household: @merge_household %>
      </div>
    </div>


    <div class="row space-bottom">
      <div class="small-6 columns">
        <%= render 'merge_household_members', household: @household %>
      </div>
      <div class="small-6 columns">
        <%= render 'merge_household_members', household: @merge_household %>
      </div>
    </div>


    <div class="row space-bottom">
      <div class="small-6 columns">
        <%= render 'merge_select_head_of_household', household: @household, default: true %>
      </div>
      <div class="small-6 columns">
        <%= render 'merge_select_head_of_household', household: @merge_household %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <input type="submit" class="medium button" value="Merge" />
      </div>
    </div>
  </form>
</div>

