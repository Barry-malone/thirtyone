<div class="row">
  <div class="large-8 small-10 columns small-centered">

    <h1>Edit Schedule</h1>

    <%= form_for(@work_schedule) do |f| %>
        <div class="field">
          <%= f.label :Staff %> <br>
          <select name="person_id">
            <%= options_from_collection_for_select(@people, :id, :fullname, @work_schedule.staff_id) %>
          </select>
        </div>
        <div class="field">
          <%= f.label :start_at %> <br>
          <%= f.date_field :start_at, :value => @work_schedule.start_at.to_date %>
        </div>
        <div class="field">
          <%= f.label :end_at %> <br>
          <%= f.date_field :end_at, :value => @work_schedule.end_at.to_date %>
        </div>
        <div class="field">
          <%= f.label :notes %> <br>
          <%= f.text_field :note, :value => @work_schedule.note %>
        </div>
        <input type="submit" value="Save"/>
    <% end %>

    <%= button_to "Delete", {:controller => :work_schedule,
                             :action => 'destroy', :id => @work_schedule.id}, :method => :delete %>
  </div>
</div>