<%= form_for(@new_work_schedule) do |f| %>
 <div class="field">
   <%= f.label :Staff %> <br>
   <select name="person_id">
     <%= options_from_collection_for_select(@people, :id, :fullname) %>
   </select>
 </div>
 <div class="field">
   <%= f.label :start_at %> <br>
   <%= f.date_field :start_at, :value => @new_work_schedule.start_at.to_date %>
 </div>
 <div class="field">
   <%= f.label :end_at %> <br>
   <%= f.date_field :end_at, :value => @new_work_schedule.start_at.to_date %>
 </div>
  <div class="field">
    <%= f.label :notes %> <br>
    <%= f.text_field :note, :value => "Add your notes here"%>
  </div>
    <div class="actions">
   <%= submit_tag("Schedule", class: "button tiny") %>
 </div>
<% end %>