<h1>Listing visits</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Host</th>
      <th>Visit Date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= @people.where(id: visit.person_id).to_a.first.fullname %></td>
        <td><%= @users.where(id: visit.host_id).to_a.first.name %></td>
        <td><%= visit.visit_date %></td>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

