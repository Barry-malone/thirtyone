<%= form_for(@new_event) do |f| %>
 <div class="field">
   <%= f.label :name %> <br>
   <%= f.text_field :name, :value => "Chad"%>
 </div>
 <div class="field">
   <%= f.label :start_at %> <br>
   <%= f.date_field :start_at, :value => @new_event.start_at.to_date %>
 </div>
 <div class="field">
   <%= f.label :end_at %> <br>
   <%= f.date_field :end_at, :value => @new_event.start_at.to_date %>
 </div>
    <div class="actions">
   <%= submit_tag("Add Event", class: "button tiny") %>
 </div>
<% end %>