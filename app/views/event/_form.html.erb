<%= form_for(@new_event) do |f| %>
 <div class="field">
   <%= f.label :name %> <br>
   <%= f.text_field :name, :value => "Chad"%>
 </div>
 <div class="field">
   <%= f.label :start_at %> <br>
   <%= f.date_field :start_at, :value => Date.new(2014,04,07) %>
 </div>
 <div class="field">
   <%= f.label :end_at %> <br>
   <%= f.date_field :end_at, :value => Date.new(2014,04,07) %>
 </div>
    <div class="actions">
   <%= f.submit %>
 </div>
<% end %>