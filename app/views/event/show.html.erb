
<h1>Edit Event</h1>

<%= form_for(@event) do |f| %>
    <div class="field">
      <%= f.label :name %> <br>
      <%= f.text_field :name, :value => @event.name%>
    </div>
    <div class="field">
      <%= f.label :start_at %> <br>
      <%= f.date_field :start_at, :value => @event.start_at.to_date %>
    </div>
    <div class="field">
      <%= f.label :end_at %> <br>
      <%= f.date_field :end_at, :value => @event.end_at.to_date %>
    </div>
      <input type="submit" value="Save" />
<% end %>

   <%= button_to "Delete", {:controller => :event,
                         :action => 'destroy', :id => @event.id }, :method => :delete %>




