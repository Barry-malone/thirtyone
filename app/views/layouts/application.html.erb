<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "ThirtyOne" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <%= if(user_signed_in?)
    render "static_pages/topnav"
  else 
    render "static_pages/unauthTopnav"
  end %>

     <% if notice %>
      <div id="notice" class="row">
        <div class="large-6 radius large-centered columns alert-box success">
        <% if notice.is_a?(Array)
             notice.each do |n|%>
               <%= n %><br />
            <% end %>

        <% else %>
            <%= notice %>
        <% end %>

        </div>
      </div>

     <script type="text/javascript">
          $("#notice").delay(3000).fadeOut(1000);
      </script>
     <% end %>

     <% if alert %>
      <div id="error" class="row">
        <div class="large-6 radius large-centered columns alert-box alert">
          <% if alert.is_a?(Array)
               alert.each do |n|%>
                  <%= n %><br />
              <% end %>

          <% else %>
              <%= alert %>
          <% end %>

        </div>
      </div>

      <script type="text/javascript">
          $("#error").delay(3000).fadeOut(1000);
      </script>
  <% end %>

    <%= yield %>
  </body>
</html>
